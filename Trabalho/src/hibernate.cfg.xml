<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/forfood?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="forfoodmvc/modelo/Pedido.hbm.xml"/>
    <mapping resource="forfoodmvc/modelo/Cliente.hbm.xml"/>
    <mapping resource="forfoodmvc/modelo/Funcionario.hbm.xml"/>
    <mapping resource="forfoodmvc/modelo/Cargo.hbm.xml"/>
    <mapping resource="forfoodmvc/modelo/Prato.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
